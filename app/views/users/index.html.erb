<h1>User Privileges</h1>
</br>
<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xs-offset-2 col-sm-offset-2 col-lg-offset-2 col-md-offset-2">
<table class="table table-striped table-hover" style="text-align:center">
<thead><tr><th>Email</th>
<th>Name</th>
<th>Surname</th>
<th>User Type</th>
<th>Edit</th>
<th>Delete</th>
</tr></thead>
<% @users.each do |user| %>
<tr><td><%= user.email %></td>
<td><%= user.name %></td>
<td><%= user.surname %></td>
<td><%= user.role.capitalize %></td>
<td><%= link_to 'Edit', edit_user_path(user) %></td>
<td><%= link_to 'Delete', user, :method => :delete, data: { confirm: 'Are you sure?' }, :class => 'delete' %></td>
</tr>
<% end %>
</table>
</div>

