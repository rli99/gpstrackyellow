
<table>
<thead><tr><th>Email</th>
<th>Name</th>
<th>Surname</th>
<th>User Type</th>

</tr></thead>
<% @users.each do |user| %>
<tr><td><%= user.email %></td>
<td><%= user.name %></td>
<td><%= user.surname %></td>

<td><%= user.role %></td>
<td><%= link_to 'Edit', edit_user_path(user) %></td>
<td><%= link_to 'Delete user', user, :method => :delete, data: { confirm: 'Are you sure?' } %></td>

</tr>
<% end %>
</table>
