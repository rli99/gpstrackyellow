<% if notice %>
	<p id="flash" class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
	<p id="flash" class="alert alert-danger"><%= alert %></p>
<% end %>

<script type="text/javascript">
    $(document).ready(function(){
        setTimeout(function(){
        $('#flash').remove();
        }, 5000);
    })
</script>
